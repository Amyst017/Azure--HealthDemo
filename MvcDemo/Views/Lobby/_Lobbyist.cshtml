@model MvcDemo.Models.LobbyistViewModels





<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="">
                @ViewBag.Title
            </h1>
        </div>

        <div class="panel-body">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Type, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Type)
                            @Html.ValidationMessageFor(model => model.Type)
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsRegistered, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IsRegistered)
                            @Html.ValidationMessageFor(model => model.IsRegistered)
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group row">
                        <div class="col-sm-8  col-md-offset-2" style="padding-top: 6px; border-top: 1px solid lightcoral; ">
                            <a class="btn btn-sm btn-default" onclick="location.href='@Url.Action("Index", "Lobby")'">Cancel</a>
                            <input type="submit" class="btn btn-sm btn-primary" value="Create">
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>