@model IEnumerable<MvcDemo.Models.LobbyistViewModels>


@{
    ViewBag.Title = "List of Lobbyist";
    Layout = "~/Views/Lobby/_Layout.cshtml";
}

<!-- panel body -->
<a class="btn btn-success" style="margin: 10px 10px" href="@Url.Action("Create", "Lobby")"><i class="fa fa-user-plus" aria-hidden="true"></i> Create New</a>
<div class="col-md-offset-1">

    <div class="row" style="font-size:large; font-weight:400;">
        <div class="control-label col-md-3">@Html.DisplayNameFor(model => model.Name)</div>
        <div class="control-label col-md-3">@Html.DisplayNameFor(model => model.Type)</div>
        <div class="control-label col-md-2">@Html.DisplayNameFor(model => model.IsRegistered)</div>
        <div class="control-label col-md-3">Action</div>
    </div>

    @foreach (var item in Model) {
        <div class="row" style="padding: 8px 8px; border-bottom: 1px solid lightgrey">
            <div class="col-md-3" title="@Html.DisplayFor(m => item.Id)">@Html.DisplayFor(m => item.Name)</div>
            <div class="col-md-3">@Html.DisplayFor(m => item.Type)</div>
            <div class="col-md-2">@Html.DisplayFor(m => item.IsRegistered)</div>

            <div class="col-md-4">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </div>
        </div>
    }

</div>