@model MvcDemo.Models.LobbyistViewModels


@{
    ViewBag.Title = "Lobbyist details";
    Layout = "~/Views/Lobby/_Layout.cshtml";
}

<!-- panel body -->
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Type, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Type)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsRegistered, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.IsRegistered)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-8  col-md-offset-2" style="padding-top: 6px; border-top: 1px solid lightcoral; ">
            <a class="btn btn-sm btn-primary" onclick="location.href='@Url.Action("Edit", "Lobby", new { id = @Model.Id })'">Edit</a>
            <a class="btn btn-sm btn-danger" onclick="location.href='@Url.Action("Delete", "Lobby", new { id = @Model.Id })'">Delete</a>            
        </div>
    </div>
</div>


